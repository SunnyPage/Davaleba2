<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.davaleba.web.screens.applicationforthepurchaseofacar">
    <data>
        <instance id="applicationForThePurchaseOfACarDc"
                  class="com.company.davaleba.entity.ApplicationForThePurchaseOfACar"
                  view="applicationForThePurchaseOfACar-view_1">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="applicationForThePurchaseOfACarDc">
            <column width="250px">
                <pickerField id="carField" property="car">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <checkBox id="carPaidField" property="carPaid"/>
                <textField id="priceField" property="price"/>
                <pickerField id="managerField" property="manager">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="counterpartyField" property="counterparty">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
